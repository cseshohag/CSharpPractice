
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var txt = "";
    if (DateTime.Now.Hour > 12)
    { txt = "Good Evening"; }
    else
    { txt = "Good Morning"; }
}
<h2>@txt</h2>

<h2>Home</h2>
@{ for (int i = 0; i < 5; i++)
    {
        <h2>
            @ViewBag.Name
        </h2>
    }
}



